{# app/Resources/views/layout.html.twig #}

<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <title>{% block title %} Prestapic{% endblock %}</title>

    {% stylesheets filter='cssrewrite, ?yui_css'
      '@PPRequestBundle/Resources/public/css/style.css' %}
      <link rel="stylesheet" href="{{ asset_url }}" type="text/css" />
    {% endstylesheets %}
    <style>
        a[ ng-click ] {
            cursor: pointer ;            
        }
        
        [ng\:cloak], [ng-cloak], [data-ng-cloak], [x-ng-cloak], .ng-cloak, .x-ng-cloak {
            
            display: none !important;
        }
    </style>
</head>

<body>
    <div class="container">
        <header id="header" class="navbar">
            <div class="content" ng-app="headerApp">
                {{ render(controller("PPHeaderBundle:Header:showHeader")) }}                    
            </div>
        </header>
        
        {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
        <section id="messageApp" style="display:none;" class="stopPropagation">
            {{ render(controller("PPMessageBundle:Message:initMessageBox"))}}
        </section>
        {% endif %}
            
        <div id="containerApp">
            <base href=" " />
            {% block bellowHeader %}                     
            {% endblock %}  

            <section class="main">
                <div class="content">


                    {% block body %}
                    {% endblock %}


                    <div id="sideInfo" class="sidebar">
                        {{ render(controller("PPRequestBundle:Request:sideInfo")) }}                    
                    </div>               
                </div>
            </section>
        </div>                            
        <section class="overlay sign" id="signInUpOver" style="display:none;" >
            
          <button class="button-close"  id="signInUpOverClose" >Ã—</button>
          <div class="overlay-content">
            <h3 class="overlay-title">Prestapic</h3>
            <p class="ind">Sign in to Prestapic or create an account</p>
            <div class="overlay-actions">                                
              <div class="signin-form">
                {{ render(controller("FOSUserBundle:Security:login"))}}
              </div>
              <div class="signup-form">
                <div class="message">If you want to post applications you need to register</div>
                <a class="button signup" href="{{ path('fos_user_registration_register') }}">Sign up</a>
              </div>
            </div>
            <div class="terms">
              <p>
                By clicking Sign Up, you agree to our
                <a href="#">Terms</a>
                and that you have read our
                <a href="#">Data Policy</a>
                , including our
                <a href="#">Cookie Use</a>.
              </p>
            </div>
          </div>
        </section>                        
              
              
        <footer>     
        </footer>
    </div>
    
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js" type="text/javascript"></script>
    <script src="https://code.angularjs.org/1.4.7/angular.js" type="text/javascript"></script>
    <script src="https://code.angularjs.org/1.4.7/angular-route.js" type="text/javascript"></script>      
    <script type="text/javascript" src="http://localhost:3000/client.js"></script>           
    
    {% block js %}                     
    {% endblock %}
    
    {% javascripts filter='?yui_js''@PPRequestBundle/Resources/public/js/signInUp.js' 
                                   '@PPHeaderBundle/Resources/public/js/headerApp.js'
                                   '@PPRequestBundle/Resources/public/js/lazyLoadDirective.js' 
                                   '@PPMessageBundle/Resources/public/js/messageApp.js'
    %}   
        <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
    
    
</body>
</html>