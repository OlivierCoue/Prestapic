<section class="overlay send-report">
    <base href=" " />
    {{ form(reportTicketForm) }}
    <div class="box-container report">
        <div class="box-content">
            <div class="box-top">
                Report a Policy violation
                <button ng-click="report.close()" class="button-close">Ã—</button>
            </div>
            <div class="box-text">
                Please select the Type of Violation you feel best represents the submission.
            </div>
            <form ng-submit="report.postReport()">
                <div class="box-choice">                    
                    <select ng-model="report.reportData.reasonId">
                        <option value="default" disabled>Choose a report reason</option>
                    {% for reason in reportReasons %}
                        <option value="{{ reason.id }}">{{ reason.name }}</option>
                    {% endfor %}
                    </select>                
                    <textarea ng-model="report.reportData.details" placeholder="More details..."></textarea>
                </div>
                <div class="box-bottom">
                    <input class="button" type="submit" value="Send Report">
                </div>
            </form>
        </div>
    </div>
</section>