<?xml version="1.0" encoding="UTF-8"?>
<sitemapindex xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
    <sitemap>
       <loc>{{ app.request.scheme ~'://' ~ app.request.httpHost ~ path('sitemap_main') }}</loc>     
    </sitemap>
    
    {# users sitemaps #}
     {% for i in 0..userPageNb if i>0%}
     <sitemap>
        <loc>{{ app.request.scheme ~'://' ~ app.request.httpHost ~ path('sitemap_user', {'page' : i} ) }}</loc>      
     </sitemap>
     {% endfor %}
     
      {# users imageRequest #}
     {% for i in 0..irPageNb if i>0 %}           
     <sitemap>
        <loc>{{ app.request.scheme ~'://' ~ app.request.httpHost ~ path('sitemap_image_request', {'page' : i} ) }}</loc>      
     </sitemap>
     {% endfor %}
     
</sitemapindex>