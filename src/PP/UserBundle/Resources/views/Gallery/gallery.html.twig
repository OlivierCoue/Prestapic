{% extends "::layout.html.twig" %}

{% block title %}
    Gallery - {{ pageProfile.name }}
{% endblock %}

{% block body %}
   
    {% if pageProfile.enabled == true %}
        {{ form(loadPropositionForm) }}
        <div class="demand-list" > 
            <base href=" " />
                        
            <div ng-controller="propositionsController as propositions" ng-init="propositions.init({{ pageProfile.id }})"
                <div id="loadPage1"></div>
                
                <div class="load-content"  id="loadingGif" >
                    <span class="bubble"></span>
                </div> 
                
            </div>
           
        </div>

    {% endif %}
{% endblock %}


{% block js %}
    {% javascripts filter='?yui_js' '@PPUserBundle/Resources/public/js/galleryApp.js' %}
      <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}    
{% endblock %}