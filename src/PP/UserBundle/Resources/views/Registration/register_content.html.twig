<div class="signin-form">
    <form action="{{ path('pp_user_register') }}" {{ form_enctype(form) }} method="POST" class="fos_user_registration_register">
        <div class="signin-rigth">
            {{ form_errors(form.username) }}
            {{ form_widget(form.username, {'attr': {'class': 'username', 'placeholder': 'Username'}}) }}

            {{ form_errors(form.email) }}
            {{ form_widget(form.email, {'attr': {'class': 'username', 'placeholder': 'Email'}}) }}

            {%  for passwordField in form.plainPassword %}
                {%  if loop.index == 1 %}
                    {{ form_errors(passwordField) }}
                    {{ form_widget(passwordField, {'attr': {'class': 'password', 'placeholder': 'Password'}}) }}
                {% else %}
                    {{ form_errors(passwordField) }}
                    {{ form_widget(passwordField, {'attr': {'class': 'password', 'placeholder': 'Repeat password'}}) }}
                {% endif %}
            {% endfor %}

            {{ form_row(form.username) }}    
            {{ form_rest(form) }}
        </div>
        <div class="signin-left">
        </div>
        <div class="signin-right">
            <button type="submit" class="button red" id="" name="_submit">Sign up</button>
        </div>
    </form>
</div>
     


